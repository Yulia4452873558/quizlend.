<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="my_button_style" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:backgroundTint">@color/orange </item>
        <item name="android:fontFamily">@font/angrybirds_regular3 </item>
        <item name="android:textColor">@color/black </item>
        <item name="android:textSize">24sp </item>
        <item name="android:textStyle">bold </item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/blue </item>
        <item name="strokeWidth">2dp </item>
        <item name="rippleColor">@color/blue </item>
    
    </style>
    
    
    <style name="levels_tv_style">
        <item name="android:background">@drawable/selectorr_game_levels</item>
        <item name="android:fontFamily">@font/angrybirds_regular3 </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp </item>
        <item name="android:textStyle">bold </item>
        <item name="android:gravity">center </item>
        <item name="android:layout_margin">5dp</item>
        <item name="rippleColor">@color/green_80 </item>

    </style>

    <style name="card_tv_style">
        <item name="android:background">@drawable/selectorr_game_levels</item>
        <item name="android:fontFamily">@font/angrybirds_regular3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">106sp </item>
        <item name="android:textStyle">normal </item>
        <item name="android:gravity">center </item>
        <item name="android:clickable">true </item>
        <item name="android:focusable">true </item>
        <item name="android:inputType">number</item>
        <item name="android:shadowColor">@color/green_80</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowRadius">10</item>
    </style>











</resources>